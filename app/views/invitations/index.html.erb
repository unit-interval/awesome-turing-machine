<h1>Invitations</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.id %></td>
        <td><%= link_to invitation.code, invitation_path(invitation) %></td>
        <td><%= invitation.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_invitation_path(invitation), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', invitation_path(invitation), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_invitation_path, :class => 'btn btn-primary' %>
