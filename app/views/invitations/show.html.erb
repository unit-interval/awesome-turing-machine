<h1>Invitation</h1>

<p>
  <b>Code</b><br>
  <%= @invitation.code %>
</p>

<p>
  <b>User</b><br>
  <%= @invitation.user_id %>
</p>

<div class="form-actions">
  <%= link_to 'Back', invitations_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_invitation_path(@invitation), :class => 'btn' %>
  <%= link_to 'Delete', invitation_path(@invitation), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
