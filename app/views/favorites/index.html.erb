<h1>Favorites</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.id %></td>
        <td><%= link_to favorite.user_id, favorite_path(favorite) %></td>
        <td><%= favorite.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_favorite_path(favorite), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', favorite_path(favorite), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_favorite_path, :class => 'btn btn-primary' %>
